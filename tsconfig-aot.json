{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom","es6"],
    "declaration": false,
        "typeRoots": [
            "node_modules/@types"
        ],
        "types": [
            "node",
            "jquery",
            "fullcalendar"
        ]
  },
  "include": [
    "components/**/*.ts",
    "primeng.ts"
  ],
  "angularCompilerOptions": {
   "genDir": "aot",
   "skipMetadataEmit" : false
 }
}